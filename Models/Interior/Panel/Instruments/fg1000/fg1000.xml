    <!-- STBY Batt "Switch" -->
    <animation>
        <type>knob</type>
        <object-name>toggle-stbybatt</object-name>
        <property>controls/lighting/batt-test-lamp</property>
        <factor>-15</factor>
        <center>
            <x-m>-0.364392</x-m>
            <y-m>-0.385037</y-m>
            <z-m> 0.020864</z-m>
        </center>
        <axis>
            <x>0</x>
            <y>1</y>
            <z>0</z>
        </axis>
        <action>
            <binding>
                <command>property-adjust</command>
                <property>controls/lighting/batt-test-lamp</property>
                <factor>1</factor>
                <min>0</min>
                <max>2</max>
                <wrap>false</wrap>
            </binding>
            <binding>
                <command>nasal</command>
                <script>c172p.click("avionics")</script>
            </binding>
            <binding>
                <command>nasal</command>
                <script>
                    var switch_pos = getprop("controls/lighting/batt-test-lamp");
                    if (switch_pos == 0) {
                        setprop("controls/lighting/batt-test-lamp-norm", 1);
                    } else
                    if (switch_pos == 1) {
                        setprop("controls/lighting/batt-test-lamp-norm", 0);
                    } else
                    if (switch_pos == 2) {
                        setprop("controls/lighting/batt-test-lamp-norm", getprop("/instrumentation/low-voltage-led"));
                    }
                </script>
            </binding>
        </action>
        <hovered>
            <binding>
                <command>set-tooltip</command>
                <tooltip-id>batt-test-lamp</tooltip-id>
                <label>Low Battery: %s</label>
                <property>controls/lighting/batt-test-lamp</property>
                <mapping>nasal</mapping>
                <script>
                    var modes = ['ARM', 'OFF', 'TEST'];
                    return modes[arg[0]];
                </script>
            </binding>
        </hovered>
    </animation>

